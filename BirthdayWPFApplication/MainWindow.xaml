        <Image Margin="0,0,155,434" Stretch="Fill" Source="pack://siteoforigin:,,,/_6af2d438-c882-4bc3-a1ac-f650c5923b43.jpg">
            <Image.OpacityMask>
                <ImageBrush/>
            </Image.OpacityMask>
        </Image>
        <StackPanel Name="Panel1" Grid.ColumnSpan="2">
            <TextBlock Name="text1" HorizontalAlignment="Center" Height="7000" Width="800" Margin="50,-290,0,0" 
                       
                       Text="
                        
                       
                       " Foreground="{DynamicResource {x:Static SystemColors.InfoBrush}}" TextWrapping="Wrap" VerticalAlignment="Top"  RenderTransformOrigin="0.5,0.5" Initialized="MoveBox" FontFamily="Bookman Old Style" FontSize="16" FontWeight="ExtraLight"/>
        </StackPanel>
    </Grid>
</Window>
